# Sample Integration Test Configuration
# Copy this file and customize for your PBS environment

# PBS Server Configuration
export PBS_ADDRESS="https://pbs.example.com:8007"
export PBS_USERNAME="admin@pam"
export PBS_PASSWORD="your-secure-password"

# Optional: Skip TLS verification for self-signed certificates
# export PBS_INSECURE_TLS="true"

# Test Configuration
export TEST_TIMEOUT="30m"
export GO_TEST_FLAGS="-v -race"

# Coverage Configuration
export ENABLE_COVERAGE="false"

# Example usage:
# 1. Copy this file: cp test/config.env.example test/config.env
# 2. Edit test/config.env with your PBS details
# 3. Source the config: source test/config.env
# 4. Run tests: make test-integration

# Alternative: Run tests directly with environment variables
# PBS_ADDRESS=https://pbs.local:8007 PBS_USERNAME=admin PBS_PASSWORD=secret ./test/run_integration_tests.sh